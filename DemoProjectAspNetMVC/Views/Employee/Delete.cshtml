@using Microsoft.AspNetCore.Mvc.Localization

@model Employee
@inject IViewLocalizer Localizer

<form method="post" class="col-4" asp-action="DeletePost">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@Localizer["deleteEmployee"]</h2>
            <hr/>
        </div>
        <div class="row mb-1">
            <div class="col-3">
                <label asp-for="FirstName">@Localizer["firstName"]</label>
            </div>
            <div class="col-4 ms-2">
                <input asp-for="FirstName" disabled/>
            </div>
        </div>
        <div class="row mb-1">
            <div class="col-3">
                <label asp-for="LastName">@Localizer["lastName"]</label>
            </div>
            <div class="col-4 ms-2">
                <input asp-for="LastName" disabled/>
            </div>
        </div>
        <div class="row mb-1">
            <div class="col-3">
                <label asp-for="Post">@Localizer["post"]</label>
            </div>
            <div class="col-4 ms-2">
                <input asp-for="Post" disabled/>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3" style="width: 150px">@Localizer["delete"]</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary mt-3 ms-3" style="width: 150px">
            @Localizer["backToList"]
        </a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}