@model Employee

<form method="post" class="col-4" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Employee</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="row mb-1">
            <div class="col-3">
                <label asp-for="FirstName">First Name</label>
            </div>
            <div class="col-4 ms-2">
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-1">
            <div class="col-3">
                <label asp-for="LastName">Last Name</label>
            </div>
            <div class="col-4 ms-2">
                <input asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-1">
            <div class="col-3">
                <label asp-for="Post">Post</label>
            </div>
            <div class="col-4 ms-2">
                <input asp-for="Post" />
                <span asp-validation-for="Post" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3" style="width: 150px">Update</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary mt-3 ms-3" style="width: 150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts
{
    @{
     <partial name="_ValidationScriptsPartial"/>   
    }
}
